<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<ScrollPane prefHeight="900.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant.restaurantapp1.MenuAdmin">
    <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="900.0" prefWidth="800.0">
            <children>
                <Pane layoutX="20.0" layoutY="20.0" prefHeight="860.0" prefWidth="760.0" style="-fx-background-color: #f1faee;">
                    <children>
                        <Label alignment="CENTER" layoutX="189.0" layoutY="55.0" prefHeight="31.0" prefWidth="382.0" style="-fx-background-color: ffffff;" text="Меню. Администратор" textFill="#012551">
                            <font>
                                <Font name="DejaVu Sans Mono Bold" size="26.0" />
                            </font>
                        </Label>
                        <TableView fx:id="menuTable" layoutX="20.0" layoutY="109.0" prefHeight="469.0" prefWidth="720.0">
                            <columns>
                                <TableColumn prefWidth="70.0" text="№" />
                                <TableColumn prefWidth="252.0" text="Название блюда" />
                                <TableColumn prefWidth="155.0" text="Описание" />
                                <TableColumn prefWidth="242.0" text="Состав" />
                            </columns>
                        </TableView>
                        <Button fx:id="btnAdd" layoutX="428.0" layoutY="635.0" mnemonicParsing="false" onAction="#toAdd" style="-fx-background-color: #012551;" text="Добавить блюдо" textFill="WHITE">
                            <font>
                                <Font name="DejaVu Sans Mono Bold" size="20.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnBack" layoutX="296.0" layoutY="724.0" mnemonicParsing="false" onAction="#toBack" prefHeight="34.0" prefWidth="188.0" style="-fx-background-color: #bedbff;" text="Вернуться назад" textFill="#012551">
                            <font>
                                <Font name="DejaVu Sans Mono Bold" size="18.0" />
                            </font>
                        </Button>
                  <Button fx:id="btnDelete" layoutX="149.0" layoutY="635.0" mnemonicParsing="false" onAction="#toDelete" style="-fx-background-color: #012551;" text="Удалить блюдо" textFill="WHITE">
                     <font>
                        <Font name="DejaVu Sans Mono Bold" size="20.0" />
                     </font>
                  </Button>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
